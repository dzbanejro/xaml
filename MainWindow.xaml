<Window x:Class="Projekt1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt1"
        mc:Ignorable="d"
        Title="Projekt" Height="350" Width="600" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Left" Margin="75,50,0,0" VerticalAlignment="Top" Width="135" Height="50" FontSize="27" FontWeight="Bold" Click="btnStart_Click" Background="#FF3595C1" BorderBrush="#FF91A5E6" IsEnabled="False"/>
        <Button x:Name="btnTime" Content="Czas" HorizontalAlignment="Left" Margin="75,150,0,0" VerticalAlignment="Top" Width="135" Height="50" FontSize="27" FontWeight="Bold" MouseEnter="btnTime_MouseEnter" MouseLeave="btnTime_MouseLeave" />
        <Button x:Name="btnActive" Content="Aktywacja" HorizontalAlignment="Left" Margin="75,248,0,0" VerticalAlignment="Top" Width="135" Height="50" FontSize="27" FontWeight="Bold" Click="btnActive_Click" />

    </Grid>
</Window>
